{% extends 'security/base.html.twig' %}

{% block title %}Modifier les rôles{% endblock %}

{% block body %}
    <h1>Modifier les rôles de l'utilisateur {{ user.nom }}</h1>

    {{ form_start(form) }}
        {{ form_row(form.roles) }}
        <button type="submit" class="btn btn-primary">Sauvegarder</button>
    {{ form_end(form) }}

    <a href="{{ path('user_list') }}" class="btn btn-secondary mt-3">Retour à la liste</a>
{% endblock %}
