{# templates/categorie/index.html.twig #}

{% extends 'security/base.html.twig' %}

{% block title %}Liste des Catégories{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1>Liste des Catégories</h1>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nom de la Catégorie</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for categorie in categories %}
                    <tr>
                        <td>{{ categorie.id }}</td>
                        <td>{{ categorie.nom }}</td>
                        <td>
                            <a href="{{ path('edit_categorie', {'id': categorie.id}) }}" class="btn btn-primary btn-sm">Modifier</a>
                            <form action="{{ path('delete_categorie', {'id': categorie.id}) }}" method="POST" style="display:inline;">
                                <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette catégorie ?')">Supprimer</button>
                            </form>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3" class="text-center">Aucune catégorie trouvée.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_categorie_creer_form') }}" class="btn btn-success">Ajouter Catégorie</a>
    </div>
{% endblock %}
